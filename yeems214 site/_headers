# Cloudflare Headers for Performance Optimization

/*
  # Security Headers
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()

  # Performance Headers
  Cache-Control: public, max-age=31536000, immutable

# HTML files - shorter cache, enable compression
/*.html
  Cache-Control: public, max-age=3600, must-revalidate
  Content-Encoding: gzip, br

# CSS and JS files - long cache with versioning
/assets/css/*
  Cache-Control: public, max-age=31536000, immutable
  Content-Encoding: gzip, br

/assets/js/*
  Cache-Control: public, max-age=31536000, immutable
  Content-Encoding: gzip, br

# Images - very long cache
/assets/img/*
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept

# WebP images specifically
/assets/img/*.webp
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/webp

# Video files
/assets/img/*.mp4
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: video/mp4

# Fonts
/assets/fonts/*
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# Bootstrap and vendor files
/assets/bootstrap/*
  Cache-Control: public, max-age=31536000, immutable
  Content-Encoding: gzip, br
*/ 